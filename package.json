{
  "name": "@ngrx-utils/platform",
  "version": "0.4.0",
  "description": "Monorepo for ngrx development utilities",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "precommit": "lint-staged",
    "clean": "git clean -xdf && yarn && yarn run bootstrap",
    "build": "ts-node ./build/index.ts",
    "release": "lerna publish --skip-npm --skip-git --conventional-commits && npm run build",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "commit": "commit",
    "test": "lerna run test",
    "deploy:builds": "yarn build && ts-node build/deploy-build",
    "ci": "yarn run test && yarn run deploy:builds",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "@angular/compiler": "^5.2.0",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@commitlint/cli": "^6.0.2",
    "@commitlint/config-conventional": "^6.0.2",
    "@commitlint/prompt-cli": "^6.0.2",
    "@ngrx/store": "^5.0.0",
    "@types/fs-extra": "^5.0.0",
    "@types/jest": "^22.0.1",
    "@types/lodash": "^4.14.92",
    "@types/node": "^9.3.0",
    "@types/ora": "^1.3.1",
    "@types/prettier": "^1.9.0",
    "@types/rimraf": "^2.0.2",
    "caporal": "^0.9.0",
    "chalk": "^2.3.0",
    "concurrently": "^3.5.1",
    "conventional-changelog-cli": "^1.3.5",
    "cpy-cli": "^1.0.1",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "lerna": "^2.8.0",
    "lint-staged": "^6.0.0",
    "lodash": "^4.17.4",
    "ora": "^1.3.0",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.54.1",
    "rxjs": "^5.5.6",
    "sorcery": "^0.10.0",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslib": "^1.8.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "uglify-js": "^3.3.8",
    "zone.js": "^0.8.20"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "license": "MIT",
  "keywords": [
    "ngrx",
    "angular",
    "rxjs",
    "ngrx-utils"
  ],
  "engines": {
    "node": ">=8.6.0",
    "npm": ">=5.3.0",
    "yarn": ">=1.3.0 <2.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
