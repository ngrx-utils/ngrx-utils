{
  "name": "@ngrx-utils/platform",
  "version": "0.1.6",
  "description": "Monorepo for ngrx development utilities",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "precommit": "lint-staged",
    "clean": "rimraf ./dist",
    "build": "ts-node ./build/index.ts",
    "changelog": "standard-version",
    "release": "lerna publish --skip-npm --conventional-commits && npm run build",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "commit": "commit",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@angular/compiler": "^5.2.0",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@commitlint/cli": "^6.0.2",
    "@commitlint/config-conventional": "^6.0.2",
    "@commitlint/prompt-cli": "^6.0.2",
    "@ngrx/store": "^4.1.1",
    "@types/fs-extra": "^5.0.0",
    "@types/jest": "^22.0.1",
    "@types/lodash": "^4.14.92",
    "@types/node": "^9.3.0",
    "@types/ora": "^1.3.1",
    "@types/prettier": "^1.9.0",
    "@types/rimraf": "^2.0.2",
    "caporal": "^0.9.0",
    "chalk": "^2.3.0",
    "concurrently": "^3.5.1",
    "cpy-cli": "^1.0.1",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "lerna": "^2.7.1",
    "lint-staged": "^6.0.0",
    "lodash": "^4.17.4",
    "ora": "^1.3.0",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.54.1",
    "rxjs": "^5.5.6",
    "sorcery": "^0.10.0",
    "standard-version": "^4.3.0",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslib": "^1.8.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "uglify-js": "^3.3.7"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "lint-staged": {
    "*.ts": ["prettier --parser typescript --write", "npm run lint", "git add"]
  },
  "license": "MIT",
  "keywords": ["ngrx", "angular", "rxjs", "ngrx-utils"],
  "engines": {
    "node": ">=8.6.0",
    "npm": ">=5.3.0",
    "yarn": ">=1.3.0 <2.0.0"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  }
}
