{
  "name": "@ngrx-utils/platform",
  "version": "0.10.0",
  "description": "Monorepo for ngrx development utilities",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "precommit": "lint-staged",
    "run:tasks": "node build/index.js",
    "build": "cross-env NODE_ENV='build' yarn run:tasks",
    "release": "cross-env NODE_ENV='release' yarn run:tasks && lerna publish --force-publish --skip-git",
    "clean": "cross-env NODE_ENV='clean' yarn run:tasks",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "cz": "git-cz",
    "test:unit": "nyc node ./tests.js",
    "test": "run-p test:unit example:test",
    "deploy:builds": "cross-env NODE_ENV='deploy' yarn run:tasks",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "ci": "run-s build test:unit coverage",
    "changelog": "git add . && standard-version -a",
    "format": "pretty-quick",
    "cli": "ng",
    "copy:dist": "cp -rf dist ./node_modules/@ngrx-utils",
    "watch:tests": "chokidar 'modules/**/*.ts' --initial -c 'nyc --reporter=text --reporter=html yarn run test:unit'",
    "example:start": "yarn run cli serve",
    "example:test": "jest",
    "example:start:aot": "yarn run cli serve -prod",
    "example:build:prod": "yarn run copy:dist && yarn cli build -prod --progress false --base-href \"/ngrx-utils/example-app/\" --output-path \"./example-app/dist\""
  },
  "private": true,
  "dependencies": {
    "rxjs": "^5.5.6"
  },
  "devDependencies": {
    "@angular/animations": "^5.2.7",
    "@angular/cdk": "^5.2.3",
    "@angular/cli": "^1.7.2",
    "@angular/common": "^5.2.7",
    "@angular/compiler": "^5.2.7",
    "@angular/compiler-cli": "^5.2.7",
    "@angular/core": "^5.2.7",
    "@angular/forms": "^5.2.7",
    "@angular/http": "^5.2.7",
    "@angular/language-service": "^5.2.7",
    "@angular/material": "^5.2.3",
    "@angular/platform-browser": "^5.2.7",
    "@angular/platform-browser-dynamic": "^5.2.7",
    "@angular/platform-server": "^5.2.7",
    "@angular/router": "^5.2.7",
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@commitlint/prompt-cli": "^6.1.3",
    "@ngrx/db": "^2.1.0",
    "@ngrx/effects": "^5.1.0",
    "@ngrx/entity": "^5.1.0",
    "@ngrx/router-store": "^5.0.1",
    "@ngrx/store": "^5.1.0",
    "@ngrx/store-devtools": "^5.1.0",
    "@types/del": "^3.0.0",
    "@types/fs-extra": "^5.0.1",
    "@types/jasmine": "^2.8.6",
    "@types/jasminewd2": "^2.0.3",
    "@types/jest": "^22.1.4",
    "@types/lodash": "^4.14.104",
    "@types/node": "^9.4.6",
    "@types/ora": "^1.3.2",
    "@types/prettier": "^1.10.0",
    "chalk": "^2.3.2",
    "chokidar": "^2.0.2",
    "chokidar-cli": "^1.2.0",
    "codecov": "^3.0.0",
    "commitizen": "^2.9.6",
    "cpy-cli": "^1.0.1",
    "cross-env": "^5.1.3",
    "cz-conventional-changelog": "^2.1.0",
    "del": "^3.0.0",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "hammerjs": "^2.0.8",
    "husky": "^0.14.3",
    "jasmine": "^2.99.0",
    "jasmine-core": "^2.99.0",
    "jasmine-marbles": "^0.2.0",
    "jasmine-spec-reporter": "^4.2.1",
    "jest": "^22.4.2",
    "jest-preset-angular": "^5.2.0",
    "lerna": "^2.9.0",
    "lint-staged": "^7.0.0",
    "lodash": "^4.17.5",
    "ngrx-store-freeze": "^0.2.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "ora": "^2.0.0",
    "prettier": "^1.11.1",
    "pretty-format": "^22.4.0",
    "pretty-quick": "^1.4.1",
    "protractor": "~5.3.0",
    "rollup": "^0.56.4",
    "sorcery": "^0.10.0",
    "standard-version": "^4.3.0",
    "ts-jest": "^22.4.1",
    "ts-node": "^5.0.1",
    "tslib": "^1.8.1",
    "tslint": "^5.9.1",
    "tsutils": "2.22.2",
    "typescript": "~2.6.2",
    "uglify-js": "^3.3.13",
    "zone.js": "^0.8.20"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "lint-staged": {
    "*.ts": [
      "yarn format --staged",
      "git add"
    ]
  },
  "license": "MIT",
  "keywords": [
    "ngrx",
    "angular",
    "rxjs",
    "ngrx-utils"
  ],
  "engines": {
    "node": ">=8.6.0",
    "npm": ">=5.3.0",
    "yarn": ">=1.3.0 <2.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupJest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "example-app/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/example-app/**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "html",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/modules/*.*/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx)"
    ],
    "moduleNameMapper": {
      "^@ngrx-utils/(?!db)(.*)": "<rootDir>/modules/$1"
    },
    "modulePathIgnorePatterns": [
      "dist"
    ]
  },
  "workspaces": [
    "modules/*"
  ],
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.spec",
      "**/spec/**/*",
      "/modules/schematics/src/*/files/**/*",
      "**/schematics/src/utility/*"
    ],
    "include": [
      "**/*.ts"
    ]
  }
}
