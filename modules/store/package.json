{
  "$schema": "../../node_modules/ng-packagr/package.schema.json",
  "name": "@ngrx-utils/store",
  "version": "0.1.5",
  "description": "Utilities to help reduce your code boilerplate when working with @ngrx/store",
  "module": "@ngrx-utils/store.es5.js",
  "es2015": "@ngrx-utils/store.js",
  "main": "bundles/store.umd.js",
  "typings": "store.d.ts",
  "scripts": {
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngrx-utils/ngrx-utils.git"
  },
  "keywords": ["@ngrx/store", "NgRx", "Angular", "Store", "Redux", "@ngrx-utils/store"],
  "author": "San Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngrx-utils/ngrx-utils/issues"
  },
  "homepage": "https://github.com/ngrx-utils/ngrx-utils#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@angular/core": "^5.1.3",
    "@ngrx/store": "^4.1.1",
    "rxjs": "^5.5.6"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "spec/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": ["<rootDir>/spec/**/*.spec.ts"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "transformIgnorePatterns": ["node_modules/(?!@ngrx)"],
    "modulePathIgnorePatterns": ["dist"]
  }
}
