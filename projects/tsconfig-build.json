{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true
  },
  "bazelOptions": {
    "suppressTsconfigOverrideWarnings": true
  }
}