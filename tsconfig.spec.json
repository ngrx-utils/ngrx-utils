{
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jasmine", "node"],
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017", 
      "dom"
    ],
    "paths": {
      "@ngrx-utils/store": [
        "projects/store"
      ]
    }
  },
  "files": ["test.ts"],
  "include": [
    "projects/store/**/*.spec.ts",
    "projects/store/**/*.d.ts"
  ],
  "bazelOptions": {
    "suppressTsconfigOverrideWarnings": true
  }
}
